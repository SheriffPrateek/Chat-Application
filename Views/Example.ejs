<!DOCTYPE html>
<html lang="en">
<head>
    <script src="/socket.io/socket.io.js" ></script>
    <script>

        const socket=io();

        function addtoDiv(message,position){
            const div=document.createElement("div");
            const element=document.createElement("p");
            element.innerHTML=message;
          
            div.appendChild(element);
            div.style.cssFloat=position;
            div.style.clear="both";
            document.getElementById('p1').appendChild(div);
            
            
          
        }
        socket.on('message',(message)=>{
          addtoDiv(message,"left");
        });

        function eventListener(){
           
            const input=document.getElementById('para').value;
           
            socket.emit('chat',input);
            addtoDiv(input,"right");
            
        }
        </script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Example</title>
</head>
<body>
    <input type="text" id="para"/>
    <button onclick="eventListener()">Click</button>
    <div id="p1">
           

    </div>
</body> 

</html>